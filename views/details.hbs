
<div class="details-container">

<div class="card mb-3" style="max-width: 700px;">
    <div class="row g-0">
        <div class="col-md-4">
            <img src="{{image}}" class="img-fluid" alt="...">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <a href="/movies" class="card-link">Go back</a>
                <h5 class="card-title">{{title}}</h5>
                <h5>Director: {{director}}</h5>
                <h5>Stars:</h5>
                <ul class="">
                    {{#each stars}}
                    <li>{{this}}</li>
                    {{/each}}
                </ul>
                <p class="card-text">{{description}}</p>
                <p class="card-text">
                    <small class="text-muted">
                          {{#each showtimes}}
                          {{this}} | 
                          {{/each}}

                    </small>
                </p>
            </div>
        </div>
    </div>
</div>
</div>